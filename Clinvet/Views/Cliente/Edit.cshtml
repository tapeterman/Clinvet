                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="col-sm-12">
                                <a href="@Url.Action("Index", "Cliente")" class="btn btn-raised btn-primary btn-default btn-round waves-effect">Voltar</a>
