@model Clinvet.Models.ContasAPagar

@{
    ViewBag.Title = "Delete";
}

<section class="content">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>
                    <i class="zmdi zmdi-assignment-check"></i> Detalhes da Conta
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <button class="btn btn-white btn-icon btn-round hidden-sm-down float-right m-l-10" type="button">
                    <i class="zmdi zmdi-plus"></i>
                </button>
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="zmdi zmdi-home"></i> SysComPet</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "ContasAPagar")">Contas</a></li>
                    <li class="breadcrumb-item active">Detalhes</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid ">
        <div class="row clearfix">
            <div class="col-md-8 col-lg-6 col-lg-offset-4">
                <div class="card ">
                    <div class="body">
                        <h6 class="col-purple"><i class="zmdi zmdi-assignment-account"></i> Detalhes da Contas: </h6>
                        <div class="table-responsive">
                            <table class="table m-t-20">
                                <tbody>
                                    <tr>
                                        <td><strong class="col-purple">@Html.DisplayNameFor(model => model.Fornecedor.NomeFantasia)</strong></td>

                                        <td><strong class="col-purple">@Html.DisplayFor(model => model.Fornecedor.NomeFantasia)</strong></td>

                                    </tr>
                                    <tr>
                                        <td>@Html.DisplayNameFor(model => model.TipoDeConta.Descricao)</td>

                                        <td>@Html.DisplayFor(model => model.TipoDeConta.Descricao)</td>

                                    </tr>
                                    <tr>
                                        <td>@Html.DisplayNameFor(model => model.Data)</td>

                                        <td>@Html.DisplayFor(model => model.Data)</td>

                                    </tr>
                                    <tr>
                                        <td>@Html.DisplayNameFor(model => model.Valor)</td>

                                        <td><strong class="col-blue-grey">@Html.DisplayFor(model => model.Valor) </strong></td>

                                    </tr>
                                    <tr>
                                        <td><a href="@Url.Action("Index", "ContasAPagar")" class="btn btn-block btn-raised btn-primary btn-default btn-round waves-effect" role="button">Voltar</a></td>
                                        <td>
                                            @using (Html.BeginForm()) {
                                        @Html.AntiForgeryToken()

                                        <div class="form-actions no-color">
                                            <input type="submit" value="Delete" class="btn btn-block btn-raised btn-primary btn-default btn-round waves-effect" />
                                        </div>}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>