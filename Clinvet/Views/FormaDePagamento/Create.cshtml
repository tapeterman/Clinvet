@model Clinvet.Models.FormaDePagamento

@{
    ViewBag.Title = "Create";
}

<section class="content">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-sm-7">
                <h2>
                    Cadastro de Formas de Pagamentos
                </h2>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-7 text-right">
                <button class="btn btn-white btn-icon btn-round hidden-sm-down float-right m-l-10" type="button">
                    <i class="zmdi zmdi-plus"></i>
                </button>
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="zmdi zmdi-home"></i> SysComPet</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "FormaDePagamento")">Formas de Pagamentos</a></li>
                    <li class="breadcrumb-item active">Cadastro</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-7 col-md-7 col-sm-7">
                <div class="card">
                    <div class="header">
                        <h2><strong><i class="zmdi zmdi-face"></i> Cadastro de Formas de Pagamentos </strong> </h2>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <ul class="header-dropdown">
                            <li class="remove">
                                <a role="button" class="boxs-close"><i class="zmdi zmdi-close"></i></a>
                            </li>
                        </ul>
                    </div>
                    @using (Html.BeginForm()) {
                        @Html.AntiForgeryToken()
                        <div class="body">
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group form-inline">
                                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-3" })
                                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <a href="@Url.Action("Index", "FormaDePagamento")" class="btn btn-raised btn-primary btn-default btn-round waves-effect">Voltar</a>
                                <button type="submit" value="Save" class="btn btn-raised btn-round btn-primary form">Salvar</button>
                            </div>

                        </div>}
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
