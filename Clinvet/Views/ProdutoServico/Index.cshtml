@model IEnumerable<Clinvet.Models.ProdutoServico>

@{
    ViewBag.Title = "Index";
}

<section class="content profile-page">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>
                    Produtos e Serviços
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <button class="btn btn-white btn-icon btn-round hidden-sm-down float-right m-l-10" type="button">
                    <i class="zmdi zmdi-plus"></i>
                </button>
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="zmdi zmdi-home"></i> SysComPet</a></li>
                    <li class="breadcrumb-item active">Produtos e Serviços</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="card parents-list">
                    <div class="header">
                        <h2>Formas de Pagamentos</h2>
                        <ul class="header-dropdown">
                            <li class="remove">
                                <a href="@Url.Action("Create", "ProdutoServico")" class="btn btn-raised btn-primary btn-default btn-round waves-effect">Cadastrar Novo Produtos/Serviço</a>
                            </li>
                        </ul>
                    </div>
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Tipo")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Produto")
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Marca)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PrecoDeVenda)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PrecoDeCompra)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Validade)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Lote)
                                    </th>
                                    <th>
                                        Ações
                                    </th>
</thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td>
                                            <strong class="col-purple">@Html.DisplayFor(modelItem => item.Tipo.Descricao)</strong>
                                        </td>
                                        <td>
                                            <strong class="col-purple">@Html.DisplayFor(modelItem => item.Nome)</strong>
</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Marca)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrecoDeVenda)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrecoDeCompra)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Validade)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Lote)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                            @Html.ActionLink("Apagar", "Delete", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>